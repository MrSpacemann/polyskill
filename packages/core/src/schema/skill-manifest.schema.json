{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SkillManifest",
  "type": "object",
  "required": ["name", "version", "description", "type", "license", "author", "skill", "adapters"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^@[a-z0-9-]+/[a-z0-9-]+$",
      "description": "Scoped package name (e.g. @author/skill-name)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semver version string"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "type": {
      "type": "string",
      "enum": ["prompt", "tool", "workflow", "composite"]
    },
    "license": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "email": { "type": "string", "format": "email" },
        "url": { "type": "string", "format": "uri" }
      },
      "additionalProperties": false
    },
    "main": {
      "type": "string"
    },
    "skill": {
      "type": "object",
      "properties": {
        "instructions": { "type": "string" },
        "tools": { "type": "string" },
        "examples": { "type": "string" }
      },
      "additionalProperties": false
    },
    "adapters": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    },
    "repository": {
      "type": "string"
    },
    "evals": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": ["productivity","creative-media","automation","coding-data",
               "research-learning","security","marketing-sales","crypto-web3",
               "finance","legal"]
    }
  },
  "additionalProperties": false
}
