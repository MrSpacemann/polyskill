{
  "name": "@polyskill/cli",
  "version": "0.1.7",
  "description": "CLI for creating, validating, and publishing PolySkill skills",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "polyskill": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/templates dist/templates",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@polyskill/core": "workspace:*",
    "commander": "^13.0.0",
    "chalk": "^5.4.0",
    "@inquirer/prompts": "^7.0.0"
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "@types/node": "^22.0.0",
    "vitest": "^3.0.0"
  }
}
